# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to Git!

# Security
DJANGO_SECRET_KEY=your-secret-key-here-generate-a-new-one
DJANGO_DEBUG=False

# Database (Render will provide this automatically)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Email Configuration
EMAIL_HOST_USER=shantiyuwac@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password-here

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com

# Optional: For custom domain later
# ALLOWED_HOSTS=localhost,127.0.0.1,shantiyuwaclub.org,www.shantiyuwaclub.org,.onrender.com
